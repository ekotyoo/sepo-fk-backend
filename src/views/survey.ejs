<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SEPO App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    span {
      width: 135px;
      word-wrap: break-word;
      display: inline-block;
    }
  </style>
</head>
<header>
  <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">SEPO App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<body>
  <div class="container">
    <div class="main-body my-4">
      <h2 class="mb-4"><%= title %></h2>

      <div class="row gutters-sm">
        <% questions.forEach((question, index) => { %>
        <div class="col-md-12 mb-3">
          <div class="card">
            <div class="card-body">
              <h6 class="mb-3"><%= index + 1 %><%= ". " %><%= question.question %></h6>
              <% if(question.image_path) { %>
              <img class="mb-3" src="<%= question.image_path %>" height="200">
              <% } %>
              <ul class="list-group">
                <% question.options.forEach((option) => { %>
                <li class="list-group-item">
                  <% if(question.current_answer == option.id) { %>
                  <div class="font-weight-bold"><%= option.text %> âœ”</div>
                  <% } else { %>
                  <div class="text-secondary"><%= option.text %></div>
                  <% } %>
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>