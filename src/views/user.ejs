<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SEPO App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    span {
      width: 135px;
      word-wrap: break-word;
      display: inline-block;
    }
  </style>
</head>
<header>
  <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">SEPO App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<body>
  <div class="container">
    <div class="main-body my-4">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="<%= user.avatar_path %>" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4><%= user.name %></h4>
                  <p class="text-secondary mb-1"><%= user.email %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3">
            <ul class="list-group list-group-flush">
              <% pillCounts.forEach((pillCount) => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <a href="<%= user.id %>/pill/<%= pillCount.id %>">
                  <h6 class="mb-0">
                    <ion-icon name="bandage-outline"></ion-icon> <%= pillCount.name %>
                  </h6>
                </a>
                <% if (pillCount.done_date == null) {%>
                <span class="text-secondary">Belum Dikerjakan</span>
                <% } else {%>
                <span class="text-secondary">Sudah Dikerjakan</span>
                <% } %>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Nama Lengkap</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.personal_data.name %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Tanggal Lahir</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.personal_data.birth_date.toLocaleDateString() %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Jenis Kelamin</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= gender[user.personal_data.gender.toString()] %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Alamat</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.personal_data.address %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Nomor Handphone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= user.personal_data.phone %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Pendidikan Terakhir</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= education[user.personal_data.education.toString()] %>
                </div>
              </div>
            </div>
          </div>
          <div class="row gutters-sm">
            <% tests.forEach((test, i) => { %>
            <div class="col-sm-6 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h4><%= test.title %></h4>
                  <% scores[i].forEach((score) => { %>
                  <hr>
                  <div class="row">
                    <div class="col-sm-9">
                      <a href="<%= user.id %>/survey/<%= score.id %>">
                        <h6 class="mb-0"><%= score.name %></h6>
                      </a>
                    </div>
                    <div class="col-sm-3 text-secondary">
                      <%= score.score %>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>

    </div>
  </div>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>